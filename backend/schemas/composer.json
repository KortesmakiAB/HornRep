{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "description": "Add a new composer.",
    "properties": {
        "fName": {
            "$id": "#/properties/fName",
            "type": "string"
        },
        "lName": {
            "$id": "#/properties/lName",
            "type": "string"
        },
        "country": {
            "$id": "#/properties/country",
            "type": "string"
        },
        "gender": {
            "$id": "#/properties/gender",
            "type": "string",
            "minLength": 4,
            "maxLength": 6
        }
    },
    "additionalProperties": false,
    "required": ["fName", "lName", "country", "gender"]
}  